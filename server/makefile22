ROOT_PATH=$(shell pwd)
CONF=$(ROOT_PATH)/conf
PLUGIN=$(ROOT_PATH)/plugin
WWWROOT=$(ROOT_PATH)/wwwroot
 
FLAGS=-D_STDOUT_ -std=c++11 -lprotobuf -lboost_regex  -L../api -lindex -I /usr/local/src/cppjieba/include -I /usr/local/src/cppjieba/deps
LDFLAGS=-lpthread -lhtmlcxx -lprotobuf -lboost_regex  -L../api -lindex -I /usr/local/src/cppjieba/include -I /usr/local/src/cppjieba/deps
CC=g++
bin=httpd
src=httpd.c main.c
obj=$(shell echo $(src) | sed 's/\.c/\.o/g') #??????
 
 
$(bin):$(obj)
	$(CC) -g -o $@ $^ $(LDFLAGS)

%.o:%.cc
	$(CC) $(FLAGS)  -c -g $< -o $@ 

.PHONY:clean
clean:
	rm *.o $(bin)
.PHONY:debug
debug:
	echo $(obj)

